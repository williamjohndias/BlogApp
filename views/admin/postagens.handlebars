<h2>Lista de Posts</h2>
<hr />
<a href="/admin/postagens/add">
  <button class="btn btn-success">Nova Postagem</button>
</a>

{{#each postagens}}
  <div class="card mt-4">
    <div class="card-body">
      <h4>{{titulo}}</h4>
      <p>Descrição: {{descricao}}</p>
      <small>Data de publicação: {{#formatDate data}}{{/formatDate}}</small><br
      />
      <small>Categoria: {{categoria.nome}}</small><br />
      <a href="/admin/postagens/edit/{{_id}}">
        <button class="btn btn-success">Editar postagem</button>
      </a>
      <a href="/admin/postagens/deletar/{{_id}}">
        <button class="btn btn-danger">Deletar postagem</button>
      </a>
    </div>
  </div>
{{else}}
  <p>Nenhuma postagem registrada :(</p>
{{/each}}