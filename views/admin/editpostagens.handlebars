{{#each erros}}
  <div class="alert alert-danger">{{texto}}</div>
{{else}}

{{/each}}

<div class="card">
  <div class="card-body">
    <h4>Editar Postagem</h4>
    <form action="/admin/postagem/edit" method="POST">
      <input type="hidden" name="id" value="{{postagem._id}}" />

      <label for="titulo">Título</label>
      <input
        type="text"
        name="titulo"
        class="form-control"
        required
        value="{{postagem.titulo}}"
      />
      <label for="slug">Slug</label>
      <input
        name="slug"
        type="text"
        class="form-control"
        value="{{postagem.slug}}"
      />
      <label for="descricao">Descrição</label>
      <input
        type="text"
        class="form-control"
        name="descricao"
        value="{{postagem.descricao}}"
      />
      <label for="conteudo">Conteúdo</label>
      <textarea
        name="conteudo"
        class="form-control"
      >{{postagem.conteudo}}</textarea>
      <label for="categoria">Categoria</label>
      <select name="categoria" class="form-control mb-2">
        {{#each categorias}}
          <option value="{{_id}}">{{nome}}</option>
        {{else}}
          <option value="0">Nenhuma categoria registrada</option>
        {{/each}}
      </select>
      <button class="btn btn-success" type="submit">Editar post</button>
    </form>
  </div>
</div>